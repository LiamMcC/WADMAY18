extends layout
block content

    .row
      .holder
        h1 Hi Im the products page!
          .grid-container
            each row in res1
             .item
              h1.itemtitle #{row.Name}
              img.pimage(src="#{row.Image}", alt="#{row.Image}")
              p.itemp Price: &euro;#{row.Price}
              p.itemp Activity: #{row.Activity}
              p If you click on me, I will disappear.
              p Click me away!
              p Click me too! 
              a.button(href="/delete/#{row.Id}") Delete #{row.Name}
              script.
                $(document).ready(function(){
                $("p").click(function(){
                $(this).hide();
                });
                });